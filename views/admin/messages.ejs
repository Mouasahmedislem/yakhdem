<!DOCTYPE html>
<html>
<head>
  <title>Paintello Admin Inbox</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: #fefefe;
      color: #333;
      padding: 2rem;
    }

    .user-block {
      background: #fff;
      border: 1px solid #eee;
      border-left: 5px solid #d3bfa6;
      border-radius: 10px;
      padding: 20px;
      margin-bottom: 30px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    }

    h2 {
      font-size: 18px;
      color: #b08d57;
      margin-bottom: 10px;
    }

    .msg {
      margin: 5px 0;
      padding: 8px;
      background: #fafafa;
      border-radius: 6px;
    }

    .meta {
      color: #888;
      font-size: 12px;
      display: inline-block;
      width: 180px;
    }

    form.reply-form {
      margin-top: 10px;
    }

    .reply-form textarea {
      width: 100%;
      height: 50px;
      padding: 10px;
      border-radius: 8px;
      border: 1px solid #ccc;
      resize: none;
      font-family: inherit;
    }

    .reply-form button {
      margin-top: 5px;
      background: #b08d57;
      color: #fff;
      border: none;
      padding: 8px 16px;
      border-radius: 6px;
      cursor: pointer;
    }
   .admin-msg {
  background: #e1f5ec;
  border-left: 5px solid #61c19f;
  text-align: right;
}

    .reply-form button:hover {
      background: #9c7a4b;
    }
  </style>
</head>
<body>
  <h1>üì© Paintello Admin ‚Äî WhatsApp Messages</h1>

  <div id="messages-container">
    <% Object.keys(grouped).forEach(from => { %>
      <div class="user-block">
        <h2>üìû <%= from %> (<%= grouped[from].name %>)</h2>

       <% grouped[from].messages.forEach(msg => { %>
  <div class="msg <%= msg.name === 'ADMIN' ? 'admin-msg' : '' %>">
    <span class="meta">[<%= new Date(msg.createdAt).toLocaleString() %>]</span>
    <% if (msg.name === 'ADMIN') { %>
      ‚úÖ <strong>Admin:</strong> <%= msg.text %>
    <% } else { %>
      <strong><%= msg.type %>:</strong> <%= msg.text || msg.payload || "..." %>
    <% } %>
  </div>
<% }) %>


        <form class="reply-form" method="POST" action="/admin/reply">
          <input type="hidden" name="to" value="<%= from %>">
          <textarea name="text" placeholder="Votre r√©ponse..."></textarea>
          <button type="submit">Envoyer</button>
        </form>
      </div>
    <% }) %>
  </div>

 <script>
  setInterval(async () => {
    const textareas = document.querySelectorAll('.reply-form textarea');
    const savedInputs = {};

    // Save textarea values by user ID
    textareas.forEach(textarea => {
      const userId = textarea.closest('.reply-form').querySelector('input[name="to"]').value;
      savedInputs[userId] = textarea.value;
    });

    try {
      const res = await fetch('/admin/messages/partial');
      const html = await res.text();
      document.getElementById('messages-container').innerHTML = html;

      // Restore textarea values
      Object.entries(savedInputs).forEach(([userId, value]) => {
        const textarea = document.querySelector(`.reply-form input[value="${userId}"]`)?.closest('.reply-form')?.querySelector('textarea');
        if (textarea) textarea.value = value;
      });
    } catch (err) {
      console.error("üîÅ Refresh error:", err);
    }
  }, 5000);
</script>


</body>
</html>


