<body class="bg-white">
  <!-- ===================== ZARA-STYLE NAVBAR ===================== -->
<header class="fixed top-0 left-0 w-full z-50 navbar-zara">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      
      <!-- Left: Logo -->
      <a href="/" class="logo">
        <img src="/img/logo.png" 
             alt="Paintello Logo" 
             class="h-20 md:h-24 w-auto" />
      </a>

      <!-- Center: Nav links -->
      <nav class="hidden md:flex items-center gap-8">
        <a href="/" class="nav-link-zara">Home</a>
        <a href="/shop" class="nav-link-zara">Shop</a>
        <a href="/track-login" class="nav-link-zara">Track Order</a>
      </nav>

      <!-- Right: Icons -->
      <div class="flex items-center gap-5">
        <!-- Cart -->
        <a href="/shop" class="relative flex items-center justify-center hover:opacity-70 transition" title="Cart">
          <i class="fa-solid fa-bag-shopping text-gray-800 text-lg"></i>
          <% if (session.cart && session.cart.totalQty > 0) { %>
            <span class="absolute -top-2 -right-2 bg-[color:var(--zara-black)] text-white text-[10px] font-semibold px-1.5 py-0.5 rounded-full">
              <%= session.cart.totalQty %>
            </span>
          <% } %>
        </a>

        <!-- Profile dropdown -->
        <div class="relative">
          <button id="userMenuBtn" class="flex items-center justify-center hover:opacity-70 transition focus:outline-none" title="Account">
            <i class="fa-regular fa-user text-gray-800 text-lg"></i>
          </button>

          <!-- Dropdown -->
          <div id="userDropdown" class="hidden absolute right-0 mt-3 w-44 bg-white border border-gray-200 py-2 z-50">
            <% if (login) { %>
              <a href="/user/profile" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">Profile</a>
              <a href="/user/logout" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">Logout</a>
