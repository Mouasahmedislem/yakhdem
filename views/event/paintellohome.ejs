  <!-- ===================== ZARA-STYLE PRODUCTS GRID ===================== -->
  <section class="bg-white">
    <h2 class="section-title-zara">New Arrivals</h2>
    
    <div class="products-grid-zara">
      <% paintellos.forEach((paintello, index) => { %>
        <article class="product-card-zara">
          <div class="product-image-container-zara">
            <!-- Product Badges -->
            <div class="product-badges-zara">
              <% if (index < 3) { %>
                <span class="badge-zara badge-new">New</span>
              <% } %>
              
              <% if (paintello.oldPrice && paintello.oldPrice > paintello.price) { %>
                <span class="badge-zara badge-sale">Sale</span>
              <% } %>
              
              <!-- STOCK STATUS BADGE -->
              <% if (paintello.disponible === true) { %>
                <span class="badge-zara badge-stock">In Stock</span>
              <% } else if (paintello.disponible === false) { %>
                <span class="badge-zara badge-out-of-stock">Out of Stock</span>
              <% } %>
            </div>

            <!-- Product Images Carousel -->
            <div id="carousel-<%= index %>" class="carousel slide h-full" data-ride="carousel">
              <div class="carousel-inner h-full">
                <% paintello.image.forEach((img, i) => { %>
                  <div class="carousel-item <%= i === 0 ? 'active' : '' %> h-full">
                    <img class="product-image-zara" src="<%= img %>" alt="<%= paintello.title %> - Image <%= i + 1 %>">
                  </div>
                <% }) %>
              </div>
              
              <!-- Carousel Controls -->
              <% if (paintello.image.length > 1) { %>
                <button class="carousel-control-zara carousel-control-prev-zara" type="button" data-target="#carousel-<%= index %>" data-slide="prev">
                  <span class="carousel-control-icon-zara">
                    <i class="fas fa-chevron-left"></i>
                  </span>
                </button>
                <button class="carousel-control-zara carousel-control-next-zara" type="button" data-target="#carousel-<%= index %>" data-slide="next">
                  <span class="carousel-control-icon-zara">
                    <i class="fas fa-chevron-right"></i>
                  </span>
                </button>
              <% } %>
            </div>

            <!-- Quick View Overlay -->
            <div class="quick-view-overlay">
              <a href="<%= paintello.href || '/product/' + paintello._id %>" class="quick-view-btn">
                View Product
              </a>
            </div>
          </div>

          <div class="product-info-zara">
            <h3 class="product-title-zara">
              <a href="<%= paintello.href || '/product/' + paintello._id %>" class="hover:opacity-70 transition">
                <%= paintello.title %>
              </a>
            </h3>
            
            <div class="product-price-zara">
              <span><%= paintello.price.toFixed(2) %> DA</span>
              <% if (paintello.oldPrice && paintello.oldPrice > paintello.price) { %>
                <span class="product-old-price-zara"><%= paintello.oldPrice.toFixed(2) %> DA</span>
              <% } %>
            </div>
            
            <!-- Stock Status Indicator -->
            <% if (paintello.disponible !== undefined) { %>
              <div class="stock-indicator <%= paintello.disponible === true ? 'stock-in' : 'stock-out' %>">
                <span class="stock-dot <%= paintello.disponible === true ? 'stock-dot-in' : 'stock-dot-out' %>"></span>
                <span>
                  <%= paintello.disponible === true ? 'En stock • Expédié le jour même' : 'Out of stock • Disponible bientôt' %>
                </span>
              </div>
            <% } %>
          </div>
        </article>
      <% }) %>
    </div>
    
    <!-- Empty State -->
    <% if (!paintellos || paintellos.length === 0) { %>
      <div class="text-center py-20">
        <p class="text-gray-500 mb-4">No products available at the moment.</p>
        <a href="/" class="inline-block px-6 py-3 bg-black text-white text-sm uppercase tracking-wider hover:opacity-80 transition">
          Continue Shopping
        </a>
      </div>
    <% } %>
  </section>

