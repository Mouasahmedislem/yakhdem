<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Suivre Votre Commande | Paintello</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
  <link rel="manifest" href="/favicon/site.webmanifest">  
  <meta name="theme-color" content="#ffffff">
  
  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  
  <style>
    :root {
      --accent: #f4791f;
    }
    
    .navbar-brand img {
      transition: transform 0.3s ease;
    }
    
    .navbar-brand:hover img {
      transform: scale(1.05);
    }
  </style>
</head>

<body class="bg-gray-50 min-h-screen">
  <!-- Modern Navbar -->
  <header class="fixed top-0 left-0 w-full z-50 bg-white/90 backdrop-blur border-b border-gray-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-20">
        
        <!-- Logo -->
        <a href="/" class="flex items-center gap-3">
          <img src="/favicon/android-chrome-192x192.png" alt="Paintello" class="h-10 w-10">
          <img src="/img/logo.png" alt="Paintello Home" class="h-12 w-auto">
        </a>

        <!-- Desktop Navigation -->
        <nav class="hidden md:flex items-center gap-8">
          <a href="/" class="text-sm text-gray-600 hover:text-gray-900 transition">Accueil</a>
          <a href="/shop" class="text-sm text-gray-600 hover:text-gray-900 transition">Boutique</a>
          <a href="/track-login" class="text-sm text-gray-600 hover:text-gray-900 transition font-semibold">Suivi Commande</a>
        </nav>

        <!-- Right Icons -->
        <div class="flex items-center gap-5">
          <!-- Cart -->
          <a href="/shop" class="relative flex items-center justify-center hover:opacity-80 transition" title="Panier">
            <i class="fa-solid fa-bag-shopping text-gray-800 text-lg"></i>
            <% if (session.cart && session.cart.totalQty > 0) { %>
              <span class="absolute -top-2 -right-2 bg-[color:var(--accent)] text-white text-xs font-semibold px-1.5 py-0.5 rounded-full">
                <%= session.cart.totalQty %>
              </span>
            <% } %>
          </a>

          <!-- Profile Dropdown -->
          <div class="relative">
            <button id="userMenuBtn" class="flex items-center justify-center hover:opacity-80 transition focus:outline-none" title="Compte">
              <i class="fa-regular fa-user text-gray-800 text-lg"></i>
            </button>

            <div id="userDropdown" class="hidden absolute right-0 mt-3 w-44 bg-white rounded-lg shadow-lg border border-gray-100 py-2 z-50">
              <% if (login) { %>
                <a href="/user/profile" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">Profil</a>
                <a href="/user/logout" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">Déconnexion</a>
              <% } else { %>
                <a href="/user/signup" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">S'inscrire</a>
                <a href="/user/signin" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">Se connecter</a>
                <a href="/track-login" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">Suivi Commande</a>
              <% } %>
            </div>
          </div>

          <!-- Mobile Menu Button -->
          <button id="mobileMenuBtn" class="md:hidden flex items-center justify-center text-gray-800 text-xl">
            <i class="fa-solid fa-bars"></i>
          </button>
        </div>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobileMenu" class="hidden md:hidden border-t border-gray-100 bg-white">
      <div class="px-4 py-3 flex flex-col gap-2">
        <a href="/" class="text-sm text-gray-700 hover:text-[color:var(--accent)] transition">Accueil</a>
        <a href="/shop" class="text-sm text-gray-700 hover:text-[color:var(--accent)] transition">Boutique</a>
        <a href="/track-login" class="text-sm text-gray-700 hover:text-[color:var(--accent)] transition font-semibold">Suivi Commande</a>
        <% if (login) { %>
          <a href="/user/profile" class="text-sm text-gray-700 hover:text-[color:var(--accent)] transition">Profil</a>
          <a href="/user/logout" class="text-sm text-gray-700 hover:text-[color:var(--accent)] transition">Déconnexion</a>
        <% } else { %>
          <a href="/user/signup" class="text-sm text-gray-700 hover:text-[color:var(--accent)] transition">S'inscrire</a>
          <a href="/user/signin" class="text-sm text-gray-700 hover:text-[color:var(--accent)] transition">Se connecter</a>
        <% } %>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="pt-32 pb-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Return Policy Banner -->
      <div class="bg-gradient-to-r from-orange-50 to-amber-50 rounded-2xl p-6 mb-8 border border-orange-200">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center">
            <i class="fas fa-exchange-alt text-orange-600 text-xl"></i>
          </div>
          <h2 class="text-2xl font-bold text-orange-800">Retour des Produits sous 5 Jours</h2>
        </div>
        
        <div class="grid md:grid-cols-3 gap-4 mb-4">
          <div class="bg-white rounded-xl p-4 flex items-start gap-4 shadow-sm">
            <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
              <i class="fas fa-sync-alt text-green-600"></i>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900 mb-1">Échange du Produit</h4>
              <p class="text-sm text-gray-600">Pas satisfait ? Échangez-le contre un autre produit de même valeur</p>
            </div>
          </div>
          
          <div class="bg-white rounded-xl p-4 flex items-start gap-4 shadow-sm">
            <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
              <i class="fas fa-money-bill-wave text-blue-600"></i>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900 mb-1">Remboursement</h4>
              <p class="text-sm text-gray-600">Remboursement intégral sur votre compte postal CCP</p>
            </div>
          </div>
          
          <div class="bg-white rounded-xl p-4 flex items-start gap-4 shadow-sm">
            <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center flex-shrink-0">
              <i class="fas fa-clock text-purple-600"></i>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900 mb-1">Garantie 5 Jours</h4>
              <p class="text-sm text-gray-600">Demandez un retour dans les 5 jours après réception</p>
            </div>
          </div>
        </div>
        
        <p class="text-center text-orange-700 font-medium">
          <i class="fas fa-info-circle mr-2"></i>
          Suivez votre commande pour initier une demande de retour
        </p>
      </div>

      <!-- Tracking Section -->
      <% if (typeof orders === 'undefined') { %>
        <!-- Tracking Form -->
        <div class="bg-white rounded-2xl shadow-sm p-8 mb-8">
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <i class="fas fa-search text-orange-600 text-2xl"></i>
            </div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Suivre Votre Commande</h1>
            <p class="text-gray-600">Entrez votre numéro de téléphone pour suivre votre commande</p>
          </div>

          <form action="/track-login" method="POST" class="max-w-md mx-auto">
            <div class="mb-6">
              <label for="numero" class="block text-sm font-medium text-gray-700 mb-2">
                Numéro de Téléphone
              </label>
              <input 
                type="tel" 
                id="numero"
                name="numero" 
                placeholder="Exemple: 0551234567" 
                required 
                pattern="0[5-7][0-9]{8}"
                title="Veuillez entrer un numéro de téléphone algérien valide (0551234567)"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-colors"
              />
              <p class="text-xs text-gray-500 mt-2">Format: 05x, 06x ou 07x suivi de 8 chiffres</p>
            </div>
            
            <button 
              type="submit" 
              class="w-full bg-orange-500 hover:bg-orange-600 text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-200 flex items-center justify-center gap-2"
            >
              <i class="fas fa-search"></i>
              Suivre la Commande
            </button>
          </form>
        </div>

        <div class="text-center">
          <p class="text-gray-600">
            Vous n'avez pas de numéro de commande ? 
            <a href="/contact" class="text-orange-600 hover:text-orange-700 font-semibold">Contactez le support</a>
          </p>
        </div>

      <% } else if (orders.length === 0) { %>
        <!-- No Orders Found -->
        <div class="bg-white rounded-2xl shadow-sm p-8 text-center">
          <div class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-box-open text-gray-400 text-2xl"></i>
          </div>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">Aucune Commande Trouvée</h2>
          <p class="text-gray-600 mb-6">Nous n'avons trouvé aucune commande associée à ce numéro de téléphone.</p>
          <a href="/" class="inline-flex items-center gap-2 bg-orange-500 hover:bg-orange-600 text-white font-semibold py-3 px-6 rounded-lg transition-colors">
            <i class="fas fa-shopping-bag"></i>
            Continuer les Achats
          </a>
        </div>

      <% } else { %>
        <!-- Orders List -->
        <div class="text-center mb-8">
          <h1 class="text-3xl font-bold text-gray-900 mb-2">Vos Commandes</h1>
          <p class="text-gray-600">Vous avez <%= orders.length %> commande(s) trouvée(s)</p>
        </div>

        <% orders.forEach(order => { %>
          <div class="bg-white rounded-2xl shadow-sm p-6 mb-6 border-l-4 border-orange-500">
            <!-- Order Header -->
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4">
              <div class="flex items-center gap-3 mb-3 sm:mb-0">
                <span class="bg-orange-100 text-orange-800 text-sm font-semibold px-3 py-1 rounded-full">
                  Commande #<%= order._id.toString().slice(-6).toUpperCase() %>
                </span>
                <span class="bg-green-100 text-green-800 text-sm font-semibold px-3 py-1 rounded-full">
                  En Transit
                </span>
              </div>
              <div class="text-sm text-gray-500">
                <%= order.createdAt.toLocaleDateString('fr-FR') %>
              </div>
            </div>

            <!-- Order Details -->
            <div class="grid md:grid-cols-2 gap-6 mb-6">
              <div class="space-y-3">
                <div class="flex items-center gap-3">
                  <i class="fas fa-user text-gray-400 w-5"></i>
                  <div>
                    <p class="text-sm text-gray-500">Nom</p>
                    <p class="font-medium text-gray-900"><%= order.name %></p>
                  </div>
                </div>
                <div class="flex items-center gap-3">
                  <i class="fas fa-phone text-gray-400 w-5"></i>
                  <div>
                    <p class="text-sm text-gray-500">Téléphone</p>
                    <p class="font-medium text-gray-900"><%= order.numero %></p>
                  </div>
                </div>
                <div class="flex items-center gap-3">
                  <i class="fas fa-map-marker-alt text-gray-400 w-5"></i>
                  <div>
                    <p class="text-sm text-gray-500">Wilaya</p>
                    <p class="font-medium text-gray-900"><%= order.city %></p>
                  </div>
                </div>
              </div>
              
              <div class="space-y-3">
                <div class="flex items-center gap-3">
                  <i class="fas fa-home text-gray-400 w-5"></i>
                  <div>
                    <p class="text-sm text-gray-500">Adresse</p>
                    <p class="font-medium text-gray-900"><%= order.address %></p>
                  </div>
                </div>
                <div class="flex items-center gap-3">
                  <i class="fas fa-receipt text-gray-400 w-5"></i>
                  <div>
                    <p class="text-sm text-gray-500">Total</p>
                    <p class="font-medium text-gray-900"><%= order.totalWithShipping %> DZD</p>
                  </div>
                </div>
                <div class="flex items-center gap-3">
                  <i class="fas fa-truck text-gray-400 w-5"></i>
                  <div>
                    <p class="text-sm text-gray-500">Livraison estimée</p>
                    <p class="font-medium text-gray-900"><%= order.deliveryDelay %></p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Return Status or Actions -->
            <% if (order.returnRequest) { %>
              <div class="bg-blue-50 border border-blue-200 rounded-xl p-4">
                <div class="flex items-center gap-3 mb-2">
                  <i class="fas fa-info-circle text-blue-600"></i>
                  <h4 class="font-semibold text-blue-900">Statut du Retour</h4>
                </div>
                <div class="flex items-center gap-3">
                  <span class="px-3 py-1 rounded-full text-sm font-semibold 
                    <%= order.returnRequest.status === 'approved' ? 'bg-green-100 text-green-800' : 
                       order.returnRequest.status === 'rejected' ? 'bg-red-100 text-red-800' : 
                       'bg-yellow-100 text-yellow-800' %>">
                    <%= order.returnRequest.status.toUpperCase() %>
                  </span>
                  <% if (order.returnRequest.status === 'approved') { %>
                    <p class="text-blue-700">Votre retour a été approuvé. Nous vous contacterons sous peu.</p>
                  <% } %>
                </div>
              </div>
            <% } else { %>
              <div class="flex flex-col sm:flex-row gap-3 pt-4 border-t border-gray-200">
                <a href="/start-return/<%= order._id %>" 
                   class="flex-1 bg-red-500 hover:bg-red-600 text-white font-semibold py-3 px-6 rounded-lg transition-colors text-center flex items-center justify-center gap-2">
                  <i class="fas fa-undo"></i>
                  Demander un Retour
                </a>
                <a href="/contact?order=<%= order._id %>" 
                   class="flex-1 bg-gray-500 hover:bg-gray-600 text-white font-semibold py-3 px-6 rounded-lg transition-colors text-center flex items-center justify-center gap-2">
                  <i class="fas fa-headset"></i>
                  Support Client
                </a>
              </div>
            <% } %>
          </div>
        <% }); %>

        <div class="text-center mt-8">
          <a href="/" class="inline-flex items-center gap-2 bg-orange-500 hover:bg-orange-600 text-white font-semibold py-3 px-8 rounded-lg transition-colors">
            <i class="fas fa-shopping-bag"></i>
            Continuer les Achats
          </a>
        </div>
      <% } %>
    </div>
  </main>

  <!-- Footer -->
  <footer class="border-t border-gray-200 bg-white py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="text-gray-600">© <%= new Date().getFullYear() %> Paintello — Tous droits réservés</p>
    </div>
  </footer>

  <!-- JavaScript -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // User dropdown functionality
      const userBtn = document.getElementById('userMenuBtn');
      const userMenu = document.getElementById('userDropdown');
      const mobileBtn = document.getElementById('mobileMenuBtn');
      const mobileMenu = document.getElementById('mobileMenu');

      // Toggle user dropdown
      userBtn?.addEventListener('click', (e) => {
        e.stopPropagation();
        userMenu.classList.toggle('hidden');
      });

      // Close dropdown when clicking outside
      document.addEventListener('click', (e) => {
        if (!userMenu?.contains(e.target) && !userBtn?.contains(e.target)) {
          userMenu?.classList.add('hidden');
        }
      });

      // Toggle mobile menu
      mobileBtn?.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    });
  </script>
</body>
</html>
