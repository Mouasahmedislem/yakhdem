      margin-right: auto;
      padding: 20px;
      font-family: Arial, sans-serif;
    }

    h2 {
      text-align: center;
      margin-bottom: 20px;
      color: #333;
    }

    .order-card {
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 20px;
      margin-bottom: 25px;
      position: relative;
      border-left: 4px solid #f4791f;
    }

    .order-info {
      margin-bottom: 15px;
    }

    .order-info p {
      margin: 8px 0;
      color: #555;
      font-size: 16px;
    }

    .order-info strong {
      color: #333;
      font-weight: 600;
    }

    .order-actions {
      display: flex;
      justify-content: space-between;
      margin-top: 20px;
      border-top: 1px solid #eee;
      padding-top: 15px;
    }

    .btn {
      padding: 10px 20px;
      border-radius: 6px;
      font-size: 15px;
      font-weight: 600;
      text-decoration: none;
      text-align: center;
      transition: all 0.3s;
      cursor: pointer;
      border: none;
    }

    .btn-primary {
      background-color: #f4791f;
      color: white;
    }

    .btn-primary:hover {
      background-color: #e06a12;
      transform: translateY(-2px);
    }

    .btn-return {
      background-color: #e74c3c;
      color: white;
    }

    .btn-return:hover {
      background-color: #c0392b;
      transform: translateY(-2px);
    }

    .btn-secondary {
      background-color: #3498db;
      color: white;
    }

    .btn-secondary:hover {
      background-color: #2980b9;
      transform: translateY(-2px);
    }

    .cart-link {
      text-align: center;
      margin-top: 30px;
    }

    .cart-link a {
      color: #f4791f;
      text-decoration: none;
      font-weight: 600;
      font-size: 16px;
    }

    .cart-link a:hover {
      text-decoration: underline;
    }

    .order-status {
      position: absolute;
      top: 20px;
      right: 20px;
      background: #f4791f;
      color: white;
      padding: 5px 10px;
      border-radius: 4px;
      font-size: 14px;
      font-weight: bold;
    }

    .return-status {
      margin-top: 15px;
      padding: 10px;
      background: #f8f9fa;
      border-radius: 6px;
      border-left: 3px solid #3498db;
    }

    .return-status p {
      margin: 5px 0;
      color: #555;
    }

    .status-pending {
      color: #f39c12;
    }

    .status-approved {
      color: #2ecc71;
    }

    .status-rejected {
      color: #e74c3c;
    }

    .status-processed {
      color: #3498db;
    }

    .no-orders {
      text-align: center;
      padding: 30px;
      background: #f8f9fa;
      border-radius: 10px;
      color: #555;
    }

    .order-date {
      font-size: 14px;
      color: #888;
      margin-bottom: 10px;
    }

    @media (max-width: 768px) {
      .order-actions {
        flex-direction: column;
        gap: 10px;
      }
      
      .btn {
        width: 100%;
      }
    }
  </style>
