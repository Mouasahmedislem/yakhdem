  <style>
    /* Fixed Logo Header */
    #fixed-logo-header {
      position: fixed;
      top: 0;
      width: 100%;
      background-color: white;
      padding: 10px 0;
      text-align: center;
      z-index: 9999;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    #fixed-logo-header img {
      max-height: 60px;
    }

    /* Page content */
    .content-with-logo {
      margin-top: 100px;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
      padding: 20px;
      font-family: Arial, sans-serif;
    }

    h2 {
      text-align: center;
      margin-bottom: 20px;
    }

    input[type="tel"] {
      width: 100%;
      padding: 12px;
      margin-bottom: 16px;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 16px;
    }

    button {
      width: 100%;
      background-color: #f4791f;
      color: white;
      padding: 12px;
      border: none;
      border-radius: 6px;
      font-size: 16px;
      cursor: pointer;
    }

    button:hover {
      background-color: #c86000;
    }
  </style>
</head>
<body>

 <!-- Fixed Logo -->
  <div id="fixed-logo-header">
 <a href="/">
    <img src="/favicon/android-chrome-192x192.png" alt="Paintello Logo">
 </a>
<a href="/">
      <img src="/img/logo.png" alt="Paintello Logo" style="max-height: 80px;">
    </a>
  </div>

  <!-- Content Area -->
  <div class="content-with-logo">


<h2>تفاصيل الطلب</h2>
<% orders.forEach(order => { %>
  <div>
    <p>الاسم: <%= order.name %></p>
    <p>رقم الهاتف: <%= order.numero %></p>
    <p>الولاية: <%= order.wilaya %></p>
    <p>العنوان: <%= order.address %></p>
    <p>المجموع: <%= order.cart.totalPrice %> دج</p>
  
  </div>
<% }) %>
 <hr>
                    
                <div class="cart-link">
      <a href="/">Go to Shop</a>
    </div>
</div>
</div>

</body>
</html>






