      <p class="text-sm text-gray-500 mb-6">Remplissez vos coordonnées. Les frais de livraison et le délai estimé sont calculés automatiquement.</p>

      <!-- Checkout form -->
      <form id="checkoutForm" action="/checkout" method="POST" class="grid grid-cols-1 gap-6">

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <!-- Full name -->
          <div>
            <label class="label" for="name">Nom complet</label>
            <input required type="text" id="name" name="name" value="<%= user && user.firstName ? user.firstName + (user.lastName ? ' ' + user.lastName : '') : '' %>" class="input" placeholder="Prénom Nom">
          </div>

          <!-- Phone -->
          <div>
            <label class="label" for="numero">Téléphone</label>
            <input required type="tel" id="numero" name="numero" pattern="0[5-7][0-9]{8}" placeholder="e.g. 0551234567" value="<%= user && user.numero ? user.numero : '' %>" class="input">
            <p class="text-xs text-gray-500 mt-1">Format : 0xx xxxxxxx</p>
          </div>
        </div>

        <!-- Address -->
        <div>
          <label class="label" for="address">Adresse complète</label>
          <input required type="text" id="address" name="address" placeholder="Rue, n°, immeuble..." class="input" value="<%= typeof address !== 'undefined' ? address : '' %>">
        </div>

        <!-- Wilaya & Commune -->
