  <!-- Header: Two logos side-by-side -->
  <header class="bg-white/80 sticky top-0 z-40 border-b border-gray-100">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="flex items-center justify-between h-20">
        <div class="flex items-center gap-4">
          <a href="/" class="flex items-center gap-3">
            <img src="/favicon/android-chrome-192x192.png" alt="Paintello icon" class="h-12 w-auto" />
          </a>
          <a href="/paintello" class="flex items-center gap-3">
            <img src="/img/logo.png" alt="Paintello logo" class="h-20 md:h-24 w-auto" />
          </a>
        </div>

        <nav class="flex items-center gap-4">
          <a href="/" class="text-sm text-gray-600 hover:text-gray-900">Home</a>
          <a href="/shop" class="text-sm text-gray-600 hover:text-gray-900">Shop</a>
