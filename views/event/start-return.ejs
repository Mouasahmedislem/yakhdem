    <main class="container">
        <div class="return-form">
            <h1>Initiate Return for Order #<%= order._id %></h1>
            
            <form action="/submit-return" method="POST">
                <input type="hidden" name="orderId" value="<%= order._id %>">
                
                <div class="form-group">
                    <label for="reason">Reason for Return</label>
                    <select id="reason" name="reason" required>
                        <option value="">Select a reason</option>
                        <option value="wrong_item">Wrong item received</option>
                        <option value="defective">Item is defective/damaged</option>
                        <option value="not_as_described">Item not as described</option>
                        <option value="changed_mind">Changed my mind</option>
                        <option value="other">Other reason</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="refundMethod">Refund Method</label>
                    <select id="refundMethod" name="refundMethod" required>
                        <option value="">Select refund method</option>
                        <option value="exchange">Exchange for another item</option>
                        <option value="ccp_refund">CCP Money Refund</option>
                    </select>
                </div>
                
                <div class="form-group" id="exchangeDetails" style="display:none;">
                    <label for="exchangeItem">Item you'd like instead</label>
                    <input type="text" id="exchangeItem" name="exchangeItem" placeholder="Product name or ID">
                </div>
                
                <div class="form-group" id="ccpDetails" style="display:none;">
                    <label for="ccpNumber">CCP Account Number</label>
                    <input type="text" id="ccpNumber" name="ccpNumber" placeholder="Your 12-digit CCP number">
                </div>
                
                <div class="form-group">
                    <label for="notes">Additional Notes</label>
                    <textarea id="notes" name="notes" rows="4" placeholder="Any additional information..."></textarea>
                </div>
                
                <button type="submit" class="btn-submit">Submit Return Request</button>
            </form>
        </div>
    </main>
    
    <script>
        document.getElementById('refundMethod').addEventListener('change', function() {
            const method = this.value;
            document.getElementById('exchangeDetails').style.display = method === 'exchange' ? 'block' : 'none';
            document.getElementById('ccpDetails').style.display = method === 'ccp_refund' ? 'block' : 'none';
        });
    </script>
    
